rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules cho phép truy cập từ web
    match /users/{userId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /flashcard_decks/{deckId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /chats/{userId}/messages/{messageId} {
      allow read: if true;
      allow write: if true;
    }
    
    match /habit_tracker/{habitId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Cho phép truy cập public data
    match /public/{document=**} {
      allow read: if true;
      allow write: if true;
    }
    
    // Development mode - cho phép tất cả các thao tác
    match /{document=**} {
      allow read, write: if true;
    }
  }
}